CREATE TABLE todoEntity(
    id INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
    title TEXT NOT NULL,
    content TEXT NOT NULL,
    colorHex INTEGER NOT NULL,
    created INTEGER NOT NULL
);

getAllTodos:
SELECT *
FROM todoEntity;

getTodoById:
SELECT *
FROM todoEntity
WHERE id = ?;

insertTodo:
INSERT OR REPLACE
INTO todoEntity(
    id,
    title,
    content,
    colorHex,
    created
) VALUES(?, ?, ?, ?, ?);

deleteTodoById:
DELETE FROM todoEntity
WHERE id = ?;